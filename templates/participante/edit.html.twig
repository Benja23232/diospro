{% extends 'base.html.twig' %}

{% block title %}Editar Participante{% endblock %}

{% block body %}
<style>
    .form-container-wrapper {
        max-width: 600px;
        margin: 40px auto;
        padding: 30px;
        background: rgba(255,255,255,0.2);
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .participante-form {
        border-radius: 10px;
        padding: 10px;
    }

    .participante-form div.mb-3,
    .participante-form div.form-group,
    .participante-form div.form-row {
        margin-bottom: 15px;
    }

    .participante-form label {
        display: block;
        margin-bottom: 8px;
        font-weight: bold;
        color: #333;
        padding-top:5px;
    }

    .participante-form input,
    .participante-form select,
    .participante-form textarea {
        width: calc(100% - 22px);
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 6px;
        font-size: 1em;
        box-sizing: border-box;
        background-color: rgba(255, 255, 255, 0.8);
        color: #333;
    }

    .participante-form input[type="radio"],
    .participante-form input[type="checkbox"] {
        margin-right: 5px;
    }

    .participante-form input[type="radio"] + label,
    .participante-form input[type="checkbox"] + label {
        display: inline-block;
        font-weight: normal;
    }

    .participante-form .btn {
        display: inline-block;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        transition: background-color 0.3s ease;
    }

    .participante-form .btn-primary {
        background-color: #007bff;
        color: white;
        border: none;
        margin-right: 10px;
        margin-top: 20px;
    }

    .participante-form .btn-primary:hover {
        background-color: #0056b3;
    }

    .participante-form .btn-secondary {
        background-color: #6c757d;
        color: white;
        border: none;
        margin-top: 20px;
    }

    .participante-form .btn-secondary:hover {
        background-color: #5a6268;
    }

    .btn-info-return {
        background-color: #17a2b8;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        display: inline-block;
        margin-top: 20px;
        transition: background-color 0.3s ease;
    }

    .btn-info-return:hover {
        background-color: #117a8b;
    }

    h1, h2 {
        text-align: center;
        color: #333;
        margin-top: 40px;
        margin-bottom: 20px;
    }

    .list-group-item {
        background-color: transparent;
        color: #333;
        border: none;
        margin-bottom: 5px;
    }

    .delete-wrapper {
        max-width: 600px;
        margin: 20px auto;
        text-align: center;
    }

    select {
        color: black;
    }
</style>

<h1>Editar Participante</h1>

<div class="form-container-wrapper participante-form">
    {{ include('participante/_form.html.twig', {'button_label': 'Actualizar'}) }}
</div>

<div class="form-container-wrapper">
    <h2>Eventos inscritos</h2>
    {% if participante.inscripcions is not empty %}
        <ul class="list-group">
            {% for inscripcion in participante.inscripcions %}
                <li class="list-group-item">{{ inscripcion.evento.nombre }}</li>
            {% endfor %}
        </ul>
    {% else %}
        <p style="color: #333;">Este participante no está inscrito en ningún evento.</p>
    {% endif %}
</div>

<div style="text-align: center; margin-bottom: 30px;">
    <a href="{{ path('app_participante_index') }}" class="btn-info-return">Volver a la lista</a>
</div>

<div class="delete-wrapper">
    {{ include('participante/_delete_form.html.twig') }}
</div>
{% endblock %}
