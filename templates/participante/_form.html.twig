<script>
document.addEventListener('DOMContentLoaded', function() {
    // Lógica para mostrar/ocultar campos condicionales (Dieta, Medicación, Dificultades)
    function toggleField(selectId, fieldId) {
        const select = document.getElementById(selectId);
        const fieldDiv = document.getElementById(fieldId);
        function toggle() {
            if (select && fieldDiv) {
                if (select.value === 'otro') {
                    fieldDiv.style.display = 'block';
                } else {
                    fieldDiv.style.display = 'none';
                    const input = fieldDiv.querySelector('input');
                    if (input) input.value = '';
                }
            }
        }
        if (select && fieldDiv) {
            select.addEventListener('change', toggle);
            toggle();
        }
    }
    toggleField('{{ form.dieta.vars.id }}', 'otra-dieta-field');
    toggleField('{{ form.medicacion.vars.id }}', 'otra-medicacion-field');
    toggleField('{{ form.dificultades.vars.id }}', 'otra-dificultades-field');

});
</script>
