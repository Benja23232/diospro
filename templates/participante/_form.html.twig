<style>
/* backdrop - el fondo oscuro que cubre la pantalla */
.custom-modal-backdrop {
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,.5);
    z-index: 1040;
    display: none;
}

/* ventana del modal - el contenedor del formulario */
.custom-modal {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 100%;
    max-width: 600px;
    max-height: 90vh;
    overflow-y: auto;
    background: #fff;
    border-radius: 10px;
    box-shadow: 0 4px 20px rgba(0,0,0,.2);
    z-index: 1050;
    display: none;
}

/* Clases para mostrar/ocultar el modal y el backdrop */
.custom-modal.show,
.custom-modal-backdrop.show {
    display: block;
}

/* Evita el scroll del fondo cuando el modal está abierto */
body.modal-open {
    overflow: hidden;
}

/* Estilos personalizados */
.custom-modal-content {
    padding: 20px 30px;
    box-sizing: border-box;
}

.custom-modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: 15px;
    border-bottom: 1px solid #eee;
    margin-bottom: 20px;
}

.custom-modal-title {
    margin: 0;
    font-size: 1.5rem;
    color: #333;
}

.custom-close-btn {
    background: none;
    border: none;
    font-size: 1.8rem;
    cursor: pointer;
    color: #888;
    line-height: 1;
    padding: 5px;
}

.custom-close-btn:hover { color: #333; }

.custom-modal-body { padding-bottom: 20px; }

.custom-modal-footer {
    display: flex;
    justify-content: flex-end;
    gap: 10px;
    padding-top: 15px;
    border-top: 1px solid #eee;
}

.custom-btn {
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 1rem;
    transition: background-color 0.2s ease, color 0.2s ease;
}

.custom-btn-primary {
    background-color: #007bff;
    color: white;
    margin: 5px;
}
.custom-btn-primary:hover {
    background-color: #0056b3;
}
.custom-btn-success {
    background-color: #28a745;
    color: white;
}
.custom-btn-success:hover {
    background-color: #218838;
}

.d-flex { display: flex !important; }
.align-items-center { align-items: center !important; }
.mb-3 { margin-bottom: 1rem !important; }
.flex-grow-1 { flex-grow: 1 !important; }
.me-2 { margin-right: 0.5rem !important; }

.form-conditional-field { margin-top: -15px; margin-bottom: 15px; }

.form-row input[type="text"],
.form-row input[type="number"],
.form-row input[type="date"],
.form-row select,
.form-row textarea {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
    font-size: 1rem;
}

.guardar { text-align: center; margin-top: 10px; }

.select2-selection,
.select2-selection--multiple,
.select2-selection--clearable,
.select2-results__options {
    color: black;
}
</style>

<div class="participante-form">
    {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
        {{ form_row(form.nombre) }}
        {{ form_row(form.apellido) }}
        {{ form_row(form.nombreCredencial) }}
        {{ form_row(form.dni) }}
        {{ form_row(form.sexo) }}
        {{ form_row(form.fechaNacimiento) }}
        {{ form_row(form.edad) }}
        {{ form_row(form.celular) }}
        {{ form_row(form.deQueParticipa) }}
        {{ form_row(form.dieta) }}
        <div id="otra-dieta-field" class="form-conditional-field" style="display: none;">
            {{ form_row(form.otraDieta) }}
        </div>
        {{ form_row(form.medicacion) }}
        <div id="otra-medicacion-field" class="form-conditional-field" style="display: none;">
            {{ form_row(form.otraMedicacion) }}
        </div>
        {{ form_row(form.dificultades) }}
        <div id="otra-dificultades-field" class="form-conditional-field" style="display: none;">
            {{ form_row(form.otrasDificultades) }}
        </div>
        {{ form_row(form.fichaMedicaFile) }}
        {% if form.localidad is defined %}
            {{ form_row(form.localidad) }}
        {% endif %}
        
        {{ form_row(form.obraSocialnumeroAfiliado) }}
        {{ form_row(form.observaciones) }}
        {{ form_row(form.tutor1) }}
        {{ form_row(form.telefonoTutor1) }}
        {{ form_row(form.tutor2) }}
        {{ form_row(form.telefonoTutor2) }}      
        {{ form_row(form.evento) }}   

    

      
        <div class="guardar">
            <button type="submit" class="custom-btn custom-btn-primary">{{ button_label|default('Guardar') }}</button>
        </div>
    {{ form_end(form) }}
</div>




